CREATE TABLE Team (
  team_id INT,
  team_name VARCHAR(255),
  Primary key(team_id)
);

create table referee(
  referee_id int,
  name varchar(255),
  primary key (referee_id)
);

CREATE TABLE game ( 
  match_id INT ,
  stadium VARCHAR(255),
  referee_id int,
  home_team_id int,
  away_team_id int,
  Primary key(match_id),
  
  foreign key (home_team_id) references Team(team_id),
  foreign key (referee_id) references referee(referee_id),
  foreign key (away_team_id) references team(team_id)
);

Create table fans(
  fan_id INT,
  name VARCHAR(255),
  age INT,
  team_supported VARCHAR(255),
  Primary key(fan_id),
  foreign key (team_supported) references Team(team_name)
);

Create table merch(
  merch_id INT,
  item_name VARCHAR(255),
  price INT,
  team_id INT,
  Primary key(merch_id),
  foreign key (team_id) references Team(team_id)
);


